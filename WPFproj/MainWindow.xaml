<Window x:Class="WPFproj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFproj"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="2" Content="Button" HorizontalAlignment="Left" Margin="39,-89,0,0" VerticalAlignment="Top"/>
        <Button x:Name="red" Margin="10,10,10,10" Click="redCl"/>
        <Button x:Name="orange" Grid.Column="1" Margin="10,10,10,10" Click="orangeCl"/>
        <Button x:Name="yellow" Grid.Column="2" Margin="10,10,10,10" Click="yellowCl"/>
        <Button x:Name="green" Grid.Column="3" Margin="10,10,10,10" Click="greenCl"/>
        <Button x:Name="ligblue" Grid.Column="4" Margin="10,10,10,10" Click="ligblueCl"/>
        <Button x:Name="blue" Grid.Column="5" Margin="10,10,10,10" Click="blueCl"/>
        <Button x:Name="purple" Grid.Column="6" Margin="10,10,10,10" Click="purpleCl"/>

    </Grid>
</Window>
